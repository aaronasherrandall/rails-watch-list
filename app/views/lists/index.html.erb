<h1>Display Lists</h1>

<h3>List of Lists</h3>
<% @lists.each do |list| %>
  <%= link_to list.name, list_path(list)  %>
  <% if list.image_url.present? %>
    <%= cl_image_tag list.image_url %>
  <% else %>
    <%= cl_image_tag("cxhtxsjnbi6bjndprskr") %>
  <% end %>
<% end %>

<%= link_to 'Create New List', new_list_path, class: 'button' %>

<h3>List of all Movies</h3>
<% @movies.each do |movie| %>
<p><%= movie.title  %></p>
<% end %>

